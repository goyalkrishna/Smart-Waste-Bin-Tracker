    <script>
      // Back to Top Button
      const backToTop = document.getElementById("backToTop");
      window.addEventListener("scroll", () => {
        backToTop.style.display = window.scrollY > 200 ? "block" : "none";
      });
      backToTop.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
      });

      // Fade-in Animation on Scroll
      const faders = document.querySelectorAll(".fade-in");
      const appearOptions = { threshold: 0.2, rootMargin: "0px 0px -50px 0px" };
      const appearOnScroll = new IntersectionObserver(function (
        entries,
        observer
      ) {
        entries.forEach((entry) => {
          if (!entry.isIntersecting) return;
          entry.target.classList.add("visible");
          observer.unobserve(entry.target);
        });
      },
      appearOptions);
      faders.forEach((fade) => {
        appearOnScroll.observe(fade);
      });

      // Smooth Scroll for Nav Links (Updated to handle all links)
      document.querySelectorAll(".nav-links a").forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          document.querySelector(this.getAttribute("href")).scrollIntoView({
            behavior: "smooth",
          });
        });
      });


      // --- Interactive Features Section Logic ---
const featureItems = document.querySelectorAll('.feature-item');
const featureImage = document.getElementById('feature-image');

// Keep track of the currently active item to prevent re-animating
let activeItem = document.querySelector('.feature-item.active');

featureItems.forEach(item => {
    item.addEventListener('mouseover', () => {
        // Agar mouse pehle se active item par hai, toh kuch na karein
        if (item === activeItem) {
            return;
        }

        // Active class ko manage karein
        if(activeItem) {
            activeItem.classList.remove('active');
        }
        item.classList.add('active');
        activeItem = item;

        // Nayi image ka source prapt karein
        const newImageSrc = item.dataset.image;

        // 1. Pehle purani image ko fade-out karein
        featureImage.style.opacity = '0';

        // 2. Fade-out animation ke baad image badlein aur fade-in karein
        // Yeh timeout CSS ke transition duration se match hona chahiye (e.g., 400ms)
        setTimeout(() => {
            featureImage.src = newImageSrc;
            // 3. Nayi image ko fade-in karein
            featureImage.style.opacity = '1';
        }, 400); 
    });
});

    </script>

